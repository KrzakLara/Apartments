<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class=' navbar-expand navbar-light'>
        <ul class='nav navbar-nav '>
            <li class='nav-item '>
                <img src="~/Images/RWA_NavIcon.jfif" width="90" height="90" style="object-fit: cover; padding: 7px;" />
            </li>
            <li class='nav-item '>
              <b>  @Html.ActionLink("Apartments", "Index", "Home", null, new { @class = "nav-link text-black" }) </b>
            </li>
            <li class='nav-item'>
                <b>    @Html.ActionLink("Log out", "Logout", "Login", null, new { @class = "nav-link text-black " })</b>
            </li>

        </ul>
    </div>


    <div class='container body-content'>
        @RenderBody()
    </div>



    <link href="~/CSS/_layoutPage.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    @Scripts.Render("~/Scripts")
    @RenderSection("scripts", required: false)

<footer>
    <b>  <p>RWA Apartments - Lara Kržak &copy; @DateTime.Now.Year</p> </b>
</footer>
    <style>
        body {
            background-color: lightpink;
        }
    </style>
</body>
</html>
